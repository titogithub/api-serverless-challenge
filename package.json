{
  "name": "api",
  "version": "1.0.0",
  "description": "A serverless aws nodejs typescript api",
  "main": "serverless.ts",
  "scripts": {
    "lint": "eslint \"**/*.{ts,spec.ts}\" --quiet",
    "lint:fix": "eslint --fix \"**/*.{ts,spec.ts}\" --quiet",
    "prettier:fix": "prettier --write \"**/*.{ts,spec.ts}\"",
    "type-check": "tsc --noEmit",
    "deploy": "AWS_PROFILE=default NODE_ENV=dev sls --aws-profile default deploy ",
    "start:local": "NODE_ENV=local NODE_OPTIONS=--max-old-space-size=8192 sls offline start --noTimeout --httpPort 3001 --reloadHandler",
    "test:dev": "NODE_ENV=test jest",
    "test:single": "NODE_ENV=test jest -t",
    "prepare": "husky install",
    "typeorm": "NODE_ENV=dev typeorm-ts-node-commonjs -d ./db/Migration-datasource.ts",
    "typeorm:local": "NODE_ENV=local typeorm-ts-node-commonjs -d ./db/Migration-datasource.ts",
    "typeorm:drop": "npm run typeorm schema:drop",
    "typeorm:drop:local": "NODE_ENV=local npm run typeorm:local schema:drop",
    "migration:generate": "npm run typeorm migration:generate -n",
    "migration:revert": "npm run typeorm migration:revert",
    "migration:generate:local": "npm run typeorm:local migration:generate -n",
    "migration:new": "typeorm migration:create",
    "migration:run": "npm run typeorm migration:run",
    "migration:run:local": "NODE_ENV=local npm run typeorm:local migration:run",
    "migration:reset": "npm run typeorm:drop && npm run migration:run",
    "migration:reset:local": "NODE_ENV=local npm run typeorm:drop:local && npm run migration:run:local",
    "migration:revert:local": "npm run typeorm:local migration:revert"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests --runInBand --passWithNoTests"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0",
    "yarn": "please-use-npm"
  },
  "dependencies": {
    "@joi/date": "^2.1.0",
    "@middy/core": "^1.5.2",
    "@middy/http-cors": "^3.2.0",
    "@middy/http-json-body-parser": "^1.5.2",
    "class-transformer": "0.5.1",
    "class-validator": "^0.14.0",
    "http-status-codes": "^2.2.0",
    "middy": "^0.24.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "tslib": "^2.4.0",
    "typeorm": "^0.3.11",
    "typeorm-naming-strategies": "^4.1.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@serverless/typescript": "^3.21.0",
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^27.5.1",
    "@types/node": "^14.18.18",
    "@types/webpack-env": "^1.18.1",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "aws-sdk": "^2.1263.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.0",
    "jest": "^28.1.0",
    "json-schema-to-ts": "^1.5.0",
    "lint-staged": "^13.0.2",
    "prettier": "^2.6.2",
    "serverless": "^3.22.0",
    "serverless-auto-swagger": "^2.8.2",
    "serverless-offline": "^10.3.1",
    "serverless-openapi-documentation": "^0.4.0",
    "serverless-plugin-typescript": "^2.1.2",
    "serverless-webpack": "^5.10.0",
    "ts-jest": "^28.0.2",
    "ts-loader": "^8.0.15",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.1.3",
    "webpack": "^5.20.2",
    "webpack-node-externals": "^2.5.2"
  },
  "author": "tito olivieri",
  "license": "MIT"
}
